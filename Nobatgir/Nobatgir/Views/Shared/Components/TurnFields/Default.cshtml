@model TurnFieldsViewModel

<div class="row">
    <div class="col-12">زمان: ساعت @Model.Turn.Time روز @Model.Turn.TurnDatePersian</div>

    <input type="hidden" asp-for="@Model.Turn.ID" />

    @for (int i = 0; i < Model.ExpertFields.Count; i++)
    {
        <input type="hidden" asp-for="@Model.ExpertFields[i].ID" />

        if (Model.IsVeify)
        {
            if (Model.ExpertFields[i].FieldType != FieldTypes.HTML)
            {
                <label class="@Model.ExpertFields[i].CssClass mt-2">
                    @Model.ExpertFields[i].Title : @Model.ExpertFields[i].Value
                </label>
            }
        }
        else
        {
            switch (Model.ExpertFields[i].FieldType)
            {
                case FieldTypes.TextBox:

                    <input asp-for="@Model.ExpertFields[i].Value" placeholder="@Model.ExpertFields[i].Placeholder" class="@Model.ExpertFields[i].CssClass mt-2" />

                    break;

                case FieldTypes.TextArea:

                    <textarea asp-for="@Model.ExpertFields[i].Value" placeholder="@Model.ExpertFields[i].Placeholder" class="@Model.ExpertFields[i].CssClass mt-2"></textarea>

                    break;

                case FieldTypes.CheckBox:

                    <div class="@Model.ExpertFields[i].CssClass mt-2">
                        <input type="checkbox" asp-for="@Model.ExpertFields[i].Value" />
                        <label asp-for="@Model.ExpertFields[i].Value">@Model.ExpertFields[i].Title</label>
                    </div>

                    break;

                case FieldTypes.HTML:

                    <div class="@Model.ExpertFields[i].CssClass mt-2">
                        @Html.Raw(Model.ExpertFields[i].Value)
                    </div>

                    break;

                case FieldTypes.ComboBox:

                    <div class="@Model.ExpertFields[i].CssClass mt-2">

                        <label asp-for="@Model.ExpertFields[i].Value">@Model.ExpertFields[i].Title</label>

                        @Html.DropDownListFor(x => x.ExpertFields[i].Value, Model.ExpertFields[i].SourceValues)

                    </div>

                    break;

                case FieldTypes.RadioButton:


                    break;
            }
        }
    }

</div>
