@model CalendarShowDayViewModel

<div>
    @Model.Date
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">زمان</th>
            <th scope="col">مشخصات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Turns)
        {
            <tr>
                <td>@t.Time</td>
                <td>
                    @if (t.TurnDetails != null)
                    {
                        <span>قیمت: @t.Price.ToString("#,###") تومان</span>
                        <br />

                        foreach (var td in t.TurnDetails.OrderBy(x => x.ExpertField.OrderIndex))
                        {
                            if (td.ExpertField.FieldType != FieldTypes.HTML)
                            {
                                <span> @td.ExpertField.Title: @td.ValueText</span>
                                <br>
                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
