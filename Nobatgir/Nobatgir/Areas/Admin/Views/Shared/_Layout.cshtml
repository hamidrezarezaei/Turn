<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - insurance_new</title>*@
    <base href="~/" />
    <link rel="stylesheet" href="~/common/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous" />

    <link rel="stylesheet" href="~/common/css/common.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/admin/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" media="screen and (max-width: 992px)" href="~/admin/css/tablet.css" asp-append-version="true" />
    <link rel="stylesheet" media="screen and (max-width: 768px)" href="~/admin/css/mobile.css" asp-append-version="true" />

    <script src="~/common/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/admin/js/menu.js" asp-append-version="true"></script>

    @*  <link href="~/common/css/jHtmlArea/jHtmlArea.css" rel="stylesheet" />
        <script src="~/common/js/jHtmlArea/jHtmlArea-0.8.min.js"></script>
        <link rel="stylesheet" href="~/common/css/select2/select2.min.css" asp-append-version="true" />*@

</head>
<body>
    <div class="container-fluid">
        <div id="admin-navbar" class="row">
            <i class="fas fa-bars show-menu" onclick="showMenu()"></i>
        </div>
        <div class="row">
            <div id="admin-menu">
                <div class="close-container">
                    <i class="fas fa-times close-btn" onclick="hideMenu()"></i>
                </div>
                
                @await Component.InvokeAsync("AdminMenu")
            </div>
            <div id="admin-container" class="col">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>